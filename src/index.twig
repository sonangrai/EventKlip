<!-- Banner -->
<section class="banner">
  <div class="wrapper">
    <div class="banner__row">
      <div class="left__banner">
        <div class="content">
          <h2>
            Create & Plan <br />
            your Events
          </h2>
          <p>
            With just few steps, you can create an event <br />
            and start inviting people.
          </p>
          <a
            href="./"
            data-bs-toggle="modal"
            data-bs-target="#signupModal"
            class="btn"
            >Sign Up</a
          >
        </div>
      </div>
      <div class="right__banner">
        <img src="./img/banner-illus.png" alt="" />
      </div>
    </div>
  </div>
  <div class="float banner">
    <img src="./img/circles.png" alt="" />
  </div>
  <div class="float banner-flower">
    <img src="./img/flower.png" alt="" />
  </div>
</section>

<!-- Info Section -->
<section class="infos">
  <div class="wrapper">
    <div class="info__row">
      <div class="lf">
        <div class="image">
          <img src="./img/info1.png" alt="" />
        </div>
      </div>
      <div class="rt">
        <div class="info">
          <div class="head">
            <span
              >Participate in Multiple<br />
              Event</span
            >
            <p>
              Invited? Just Scan a QR Code and Wallah!<br />
              You enter the event.
            </p>
          </div>
        </div>
      </div>
    </div>
    <div class="info__row">
      <div class="lf">
        <div class="image">
          <img src="./img/info2.png" alt="" />
        </div>
      </div>
      <div class="rt">
        <div class="info">
          <div class="head">
            <span>Scan - Enter - Click</span>
            <p>
              Just like that ! What are you<br />
              waiting for?
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="float top-fw">
    <img src="./img/flower.png" alt="" />
  </div>
  <div class="float top-circ">
    <img src="./img/circles.png" alt="" />
  </div>
  <div class="float mid-twg">
    <img src="./img/twig.png" alt="" />
  </div>
  <div class="float bot-circ">
    <img src="./img/circles.png" alt="" />
  </div>
  <div class="float bot-fw">
    <img src="./img/flower1.png" alt="" />
  </div>
</section>

